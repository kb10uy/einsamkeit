{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "lib": ["es2018"],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2015",
    "baseUrl": "./",
    "paths": {
      "@config*": ["./config*"],
      "@api*": ["./src/api*"],
      "@lib*": ["./src/lib*"],
      "@main*": ["./src*"],
    },
    "outDir": "./dist/",
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./db/**/*.ts",
    "./config/*.ts"
  ]
}
