{
  "name": "einsamkeit",
  "version": "1.0.0",
  "description": "An lightweight, single-user ActivityPub implementation",
  "author": "kb10uy <kb10uy@kb10uy.org>",
  "homepage": "https://einsamkeit.kb10uy.org",
  "license": "ISC",
  "main": "index.js",
  "keywords": [
    "ActivityPub"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kb10uy/einsamkeit.git"
  },
  "bugs": {
    "url": "https://github.com/kb10uy/einsamkeit/issues"
  },
  "scripts": {
    "precommit": "lint-staged",
    "server:dev:web": "ts-node -P ./tsconfig.json -r tsconfig-paths/register ./src/index.ts",
    "server:prod:web": "cross-env NODE_ENV=production node -r tsconfig-paths/register ./dist/server/src/index.js",
    "server:build": "tsc",
    "server:lint": "tslint -c ./tslint.json -p ./ --fix",
    "server:test": "echo \"Error: no test specified\" && exit 1",
    "client:build:dev": "webpack --mode development",
    "client:build:watch": "webpack --mode development --watch",
    "client:build:prod": "webpack --mode production",
    "db:migrate:make": "knex migrate:make",
    "db:migrate": "knex migrate:latest"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint -c ./tslint.json --fix"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "bull": "^3.4.7",
    "config": "^2.0.1",
    "cross-env": "^5.2.0",
    "knex": "^0.15.2",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "log4js": "^3.0.4",
    "pg": "^7.4.3",
    "pug": "^2.0.3",
    "tsconfig-paths": "^3.5.0",
    "uuid": "^3.3.2",
    "xml-js": "^1.6.7"
  },
  "devDependencies": {
    "@types/bull": "^3.3.19",
    "@types/config": "0.0.34",
    "@types/knex": "^0.14.20",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-router": "^7.0.31",
    "@types/koa-static": "^4.0.0",
    "@types/log4js": "^2.3.5",
    "@types/node": "^10.9.2",
    "@types/pug": "^2.0.4",
    "@types/uuid": "^3.4.3",
    "autoprefixer": "^9.1.3",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "mini-css-extract-plugin": "^0.4.2",
    "node-sass": "^4.9.3",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.14.2",
    "sass-loader": "^7.1.0",
    "stylelint": "^9.5.0",
    "stylelint-config-recess-order": "^2.0.0",
    "stylelint-config-standard": "^18.2.0",
    "ts-loader": "^4.5.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^3.0.1",
    "webpack": "^4.17.1",
    "webpack-clean-obsolete-chunks": "^0.4.0",
    "webpack-cli": "^3.1.0",
    "webpack-manifest-plugin": "^2.0.3"
  }
}
